<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/White"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UsageGraphFragment">

    <LinearLayout
        android:id="@+id/layout_last_7_days"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This week"
            android:textSize="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#4eaddd"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/last_7_days"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/layout_last_7_days"
        android:layout_height="120dp">
        <LinearLayout
            android:id="@+id/day_7"
            android:layout_width="65dp"
            android:orientation="vertical"
            android:layout_height="140dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MON"
                android:textColor="#4eaddd"
                android:textStyle="bold"
                android:textAlignment="center" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="10dp"
                android:id="@+id/card_7"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/height_mon"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="8dp">

                    <com.scwang.wave.MultiWaveHeader
                        android:id="@+id/wave_7"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:scaleY="-1"
                        app:mwhVelocity="1"
                        app:mwhProgress="1"
                        app:mwhGradientAngle="45"
                        app:mwhWaveHeight="5dp"
                        app:mwhColorAlpha="0.45"
                        app:mwhWaves="MultiWave"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/day_6"
            android:layout_width="65dp"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/day_7"
            android:orientation="vertical"
            android:layout_height="140dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TUE"
                android:textColor="#4eaddd"
                android:textStyle="bold"
                android:textAlignment="center" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="10dp"
                android:id="@+id/card_6"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/height_tue"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="8dp">

                    <com.scwang.wave.MultiWaveHeader
                        android:id="@+id/wave_6"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:scaleY="-1"
                        app:mwhVelocity="1"
                        app:mwhProgress="1"
                        app:mwhGradientAngle="45"
                        app:mwhWaveHeight="5dp"
                        app:mwhColorAlpha="0.45"
                        app:mwhWaves="MultiWave"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/day_5"
            android:layout_width="65dp"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/day_6"
            android:orientation="vertical"
            android:layout_height="140dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WED"
                android:textColor="#4eaddd"
                android:textStyle="bold"
                android:textAlignment="center" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="10dp"
                android:id="@+id/card_5"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/height_wed"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="8dp">

                    <com.scwang.wave.MultiWaveHeader
                        android:id="@+id/wave_5"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:scaleY="-1"
                        app:mwhVelocity="1"
                        app:mwhProgress="1"
                        app:mwhGradientAngle="45"
                        app:mwhWaveHeight="5dp"
                        app:mwhColorAlpha="0.45"
                        app:mwhWaves="MultiWave"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/day_4"
            android:layout_width="65dp"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/day_5"
            android:orientation="vertical"
            android:layout_height="140dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THU"
                android:textColor="#4eaddd"
                android:textStyle="bold"
                android:textAlignment="center" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="10dp"
                android:id="@+id/card_4"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/height_thu"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="8dp">

                    <com.scwang.wave.MultiWaveHeader
                        android:id="@+id/wave_4"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:scaleY="-1"
                        app:mwhVelocity="1"
                        app:mwhProgress="1"
                        app:mwhGradientAngle="45"
                        app:mwhWaveHeight="5dp"
                        app:mwhColorAlpha="0.45"
                        app:mwhWaves="MultiWave"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/day_3"
            android:layout_width="65dp"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/day_4"
            android:orientation="vertical"
            android:layout_height="140dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FRI"
                android:textColor="#4eaddd"
                android:textStyle="bold"
                android:textAlignment="center" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="10dp"
                android:id="@+id/cared_3"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/height_fri"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="8dp">

                    <com.scwang.wave.MultiWaveHeader
                        android:id="@+id/wave_3"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:scaleY="-1"
                        app:mwhVelocity="1"
                        app:mwhProgress="1"
                        app:mwhGradientAngle="45"
                        app:mwhWaveHeight="5dp"
                        app:mwhColorAlpha="0.45"
                        app:mwhWaves="MultiWave"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/day_2"
            android:layout_width="65dp"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/day_3"
            android:orientation="vertical"
            android:layout_height="140dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAT"
                android:textColor="#4eaddd"
                android:textStyle="bold"
                android:textAlignment="center" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="10dp"
                android:id="@+id/card_2"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/height_sat"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="8dp">

                    <com.scwang.wave.MultiWaveHeader
                        android:id="@+id/wave_2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:scaleY="-1"
                        app:mwhVelocity="1"
                        app:mwhProgress="1"
                        app:mwhGradientAngle="45"
                        app:mwhWaveHeight="5dp"
                        app:mwhColorAlpha="0.45"
                        app:mwhWaves="MultiWave"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/day_1"
            android:layout_width="65dp"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/day_2"
            android:orientation="vertical"
            android:layout_height="140dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUN"
                android:textColor="#4eaddd"
                android:textStyle="bold"
                android:textAlignment="center" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="10dp"
                android:id="@+id/card_1"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/height_sun"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="8dp">

                    <com.scwang.wave.MultiWaveHeader
                        android:id="@+id/wave_1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:scaleY="-1"
                        app:mwhVelocity="1"
                        app:mwhProgress="1"
                        app:mwhGradientAngle="45"
                        app:mwhWaveHeight="5dp"
                        app:mwhColorAlpha="0.45"
                        app:mwhWaves="MultiWave"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_today"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/last_7_days"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/today_text"
            android:text="Today"
            android:textSize="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/Ocean_Blue"/>

        <Button
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/today_text"
            android:drawableTop="@drawable/baseline_refresh_24"
            android:drawableTint="@color/White"
            android:id="@+id/refreshButton"
            android:textSize="18sp"
            android:backgroundTint="@color/Ocean_Blue"
            app:cornerRadius = "20dp"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="320dp"
            android:layout_below="@id/today_text"
            android:id="@+id/today_layout"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardElevation="10dp"
                android:id="@+id/card_share_info"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:id="@+id/waveAmount"
                    android:layout_gravity="bottom">

                    <com.scwang.wave.MultiWaveHeader
                        android:id="@+id/waveHeader"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:scaleY="-1"
                        app:mwhVelocity="1"
                        app:mwhProgress="1"
                        app:mwhGradientAngle="45"
                        app:mwhWaveHeight="30dp"
                        app:mwhColorAlpha="0.45"
                        app:mwhCloseColor="@color/Light_Aquamarine"
                        app:mwhWaves="MultiWave"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/goal_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout_today">

        <TextView
            android:id="@+id/goal_seperater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="#4eaddd"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/today_goal_text"
            android:text="--"
            android:textSize="40dp"
            android:layout_toRightOf="@+id/goal_seperater"
            android:textStyle="bold"
            android:textColor="#4eaddd"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:id="@+id/today_current_text"
            android:textSize="32dp"
            android:paddingTop="8dp"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@+id/goal_seperater"
            android:textStyle="bold"
            android:textColor="@color/Blue_Gray"/>


    </RelativeLayout>
</RelativeLayout>
